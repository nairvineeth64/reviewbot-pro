# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/reviewbot_pro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reviewbot_pro
DB_USER=username
DB_PASSWORD=password

# Server Configuration
PORT=5000
NODE_ENV=development
API_BASE_URL=http://localhost:5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_STARTER_PRICE_ID=price_starter_plan_id
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_plan_id
STRIPE_BUSINESS_PRICE_ID=price_business_plan_id

# Google OAuth & My Business API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Yelp API Configuration
YELP_API_KEY=your-yelp-api-key
YELP_CLIENT_ID=your-yelp-client-id
YELP_CLIENT_SECRET=your-yelp-client-secret

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (Nodemailer)
EMAIL_FROM=noreply@reviewbotpro.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_GENERATE_MAX=10

# Security
CORS_ORIGIN=http://localhost:3000
BCRYPT_ROUNDS=12

# Background Jobs
JOB_CONCURRENCY=5
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=5000

# Platform Integration Settings
GOOGLE_REVIEW_SYNC_INTERVAL=15
YELP_REVIEW_SYNC_INTERVAL=15
MAX_REVIEWS_PER_SYNC=50

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Feature Flags
FEATURE_AUTO_RESPONSE=true
FEATURE_PLATFORM_INTEGRATION=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_BULK_IMPORT=true

# Trial Configuration
TRIAL_DAYS=14
TRIAL_USAGE_LIMIT=50

# Usage Limits by Plan
STARTER_MONTHLY_LIMIT=100
PROFESSIONAL_MONTHLY_LIMIT=500
BUSINESS_MONTHLY_LIMIT=999999
